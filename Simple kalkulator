using System;
using System.Globalization;
//ввод данных в консоль
namespace УрокиОтСимплКода
//Несколько проектов в одном решении; Решение - папка, элемент, который связывает все проэкты между собой
{ 
    class Program
    {
        static void Main(string[] args)
        {
            double firstValue, secondValue, thirdValue;

            Console.WriteLine("Bиведите число 1");

            firstValue = double.Parse(Console.ReadLine());

            Console.WriteLine("Введите число 2");

            secondValue = double.Parse(Console.ReadLine());

            Console.WriteLine("Bиведите число 3");

            thirdValue = double.Parse(Console.ReadLine());
          
            double sumResult = (firstValue + secondValue + thirdValue);
            double multResult = (firstValue * secondValue * thirdValue);

            Console.WriteLine("Cумма всех трёх переменных = " + sumResult);
            Console.WriteLine("Произведениё трех переменных = " + multResult);

        }
    }
}
